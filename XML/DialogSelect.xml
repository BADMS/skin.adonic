<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">9010</defaultcontrol>
	<onload>Action(enter)</onload>
	<onload>Dialog.Close(100,true)</onload>
	<onunload>Dialog.Close(100,true)</onunload>
	<onunload>ClearProperty(RefreshItem,Home)</onunload>
	<coordinates>
		<left>0</left>
		<top>0</top>
		<origin x="60" y="0">true</origin>
	</coordinates>
	<animation type="WindowOpen" reversible="false">
		<effect type="fade" delay="300" end="100" time="300" />
	</animation>
	<controls>
		<control type="group">
            <animation effect="fade" end="0" start="100" time="0" condition="Window.IsVisible(DialogKeyboard.xml) | Window.IsVisible(DialogConfirm.xml)" reversible="false">Conditional</animation>
			<include content="DialogBackgroundCommonsFake">
				<param name="DialogBackgroundWidth" value="1090" />
				<param name="DialogBackgroundHeight" value="960" />
				<param name="DialogHeaderLabel" value="" />
				<param name="DialogHeaderId" value="1" />
			</include>
			<control type="group" id="9010">
				<left>0</left>
				<top>604</top>
				<control type="wraplist" id="3">
					<width>1730</width>
					<height>310</height>
					<onup>9010</onup>
					<ondown>9010</ondown>
					<onleft>back</onleft>
					<onright>60</onright>
					<focusposition>2</focusposition>
					<pagecontrol>60</pagecontrol>
					<movement>0</movement>
					<orientation>Vertical</orientation>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<itemlayout height="62" width="1730">
						<control type="label">
							<font>font30</font>
							<align>center</align>
							<textcolor>$VAR[ColorMenuVar]</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="62" width="1730">
						<control type="image">
							<texture>background.png</texture>
							<colordiffuse>$VAR[ColorMenuVar]</colordiffuse>
						</control>
						<control type="label">
							<font>font30</font>
							<align>center</align>
							<textcolor>$VAR[ColorMenuVar]</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>
				<control type="wraplist" id="6">
					<left>-184</left>
					<width>2540</width>
					<height>384</height>
					<onup condition="Window.IsVisible(script-skinshortcuts.xml)">back</onup>
					<onup condition="!Window.IsVisible(script-skinshortcuts.xml)">SendClick(9001,5)</onup>
					<ondown>back</ondown>
					<onleft>9010</onleft>
					<onright>9010</onright>
					<focusposition>3</focusposition>
					<movement>1</movement>
					<orientation>Horizontal</orientation>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<itemlayout height="310" width="310">
						<control type="image">
							<width>310</width>
							<height>310</height>
							<bordersize>6</bordersize>
							<texture>background.png</texture>
							<colordiffuse>$VAR[MenuListColorHighlightVar]</colordiffuse>
						</control>
						<control type="image">
							<visible>String.IsEqual(ListItem.Label, ..)</visible>
							<width>310</width>
							<height>310</height>
							<bordersize>6</bordersize>
							<texture fallback="DefaultFolderBack.png">$INFO[Skin.String(MenuDefaultIconsPath)]back.png</texture>
							<colordiffuse>$VAR[IconColorVar]</colordiffuse>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<visible>!String.IsEqual(ListItem.Label, ..)</visible>
							<width>310</width>
							<height>310</height>
							<bordersize>6</bordersize>
							<texture fallback="DefaultAddonSource.png">$INFO[ListItem.Icon]</texture>
							<colordiffuse>$VAR[IconColorVar]</colordiffuse>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
					</itemlayout>
					<focusedlayout height="310" width="310">
						<control type="image">
							<width>310</width>
							<height>310</height>
							<bordersize>6</bordersize>
							<texture>background.png</texture>
							<colordiffuse>$VAR[ColorMenuVar]</colordiffuse>
						</control>
						<control type="image">
							<visible>String.IsEqual(ListItem.Label, ..)</visible>
							<width>310</width>
							<height>310</height>
							<bordersize>6</bordersize>
							<texture fallback="DefaultFolderBack.png">$INFO[Skin.String(MenuDefaultIconsPath)]back.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<visible>!String.IsEqual(ListItem.Label, ..)</visible>
							<width>310</width>
							<height>310</height>
							<bordersize>6</bordersize>
							<texture fallback="DefaultAddonSource.png">$INFO[ListItem.Icon]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="label">
							<visible>!Window.IsVisible(MyWeather.xml)</visible>
							<visible>!Window.IsVisible(script-skinshortcuts.xml)</visible>
							<animation effect="slide" time="0" start="0,0" end="0,-220">Focus</animation>
							<font>IconBig</font>
							<align>center</align>
							<textcolor>$VAR[ColorMenuVar]</textcolor>
							<label>$VAR[DialogSelectItemLabel1]</label>
							<bordersize>6</bordersize>
						</control>
						<control type="label">
							<visible>!Window.IsVisible(MyWeather.xml)</visible>
							<visible>!Window.IsVisible(script-skinshortcuts.xml)</visible>
							<animation effect="slide" time="0" start="0,0" end="0,-202">Focus</animation>
							<font>IconLarge</font>
							<align>center</align>
							<textcolor>$VAR[MenuListColorHighlightVar]</textcolor>
							<label>$VAR[DialogSelectItemLabel2]</label>
							<bordersize>6</bordersize>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<visible>Control.HasFocus(3) | Control.HasFocus(60)</visible>
					<left>1730</left>
					<width>10</width>
					<height>310</height>
					<onleft>3</onleft>
					<onright>back</onright>
					<orientation>vertical</orientation>
					<showonepage>true</showonepage>
				</control>
			</control>
			<control type="grouplist" id="9001">
				<left>0</left>
				<top>-1840</top>
				<height>120</height>
				<width>1090</width>
				<ondown condition="Control.IsVisible(3)">3</ondown>
				<ondown condition="Control.IsVisible(6)">6</ondown>
				<onup condition="Control.IsVisible(3)">3</onup>
				<onup condition="Control.IsVisible(6)">6</onup>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<control type="button" id="5">
					<description>Manual button</description>
					<label>-</label>
				</control>
				<control type="button" id="7">
					<description>Cancel button</description>
					<label>222</label>
				</control>
			</control>
		</control>
	</controls>
</window>